# Set default values for all following accounts.
defaults
auth on
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_certcheck off
aliases /etc/aliases
logfile /var/log/msmtp.log

# Gmail
account gmail
host smtp.gmail.com
port 587
from sozo.mail.send@gmail.com
user sozo.mail.send
password Lacroix!

# set a default account
account default : gmail